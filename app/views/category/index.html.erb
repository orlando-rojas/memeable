<div class="container">
  <div class="meme">
    <% @memes_by_category.each do |category,memes| %>
    <p class="meme-title"><%=category.name%></p>
    <div class="meme-container">
      <% memes.each do |meme| %>
      <div class="meme-meme">
        <a href=<%=meme_path(meme) %>>
        <div class="meme-imgcontainer">
           <img src=<%= meme.url_source %> alt="" class="meme-img">
        </div>
        </a>
        <div class="meme-created">
          <p class="meme-by">created by: <span class="meme-username"><%=meme.owner.username %></span></p>
        </div>
      </div>
      <%end %>
    </div>
    <%end%>
  </div>
</div>