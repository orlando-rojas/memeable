<div class="container-user-account">
  <h2 class="title">Log in</h2>
  <div class="form">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-item">
        <%= f.label :email, class: "form-label form-item-downcase" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input"  %>
      </div>

      <div class="form-item">
        <%= f.label :password, class: "form-label form-item-downcase" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-input"  %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-item">
          <%= f.check_box :remember_me%>
          <%= f.label :remember_me, class: "form-label-remember"%>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in" ,class: "form-send button-delete" %>
      </div>
    <% end %>
    <%= link_to "Sign up",new_user_registration_path, class: "form-link" %>
  </div>
</div>
